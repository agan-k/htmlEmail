<body class="clean-body">

{% comment %} {{test_items}} {% endcomment %}

  <table class="u-row" cellpadding="0" cellspacing="0">
    <tbody>
      <tr>
        <td align="center">
          <a href="{{shop.url}}" target="_blank">
            {%- if shop.email_logo_url %}
              <img align="center" border="0" src="{{shop.email_logo_url}}" alt="" title="" width="116" />
            {%- else %}
            <h1 class="shop-name__text">
              <a href="{{shop.url}}">{{ shop.name }}</a>
            </h1>
            {%- endif %}
          </a>
        </td>
      </tr>

      <tr>
        <td {% unless isAccsOnly %} class="pt-30 px-30" {% endunless %} align="center">
          <h1 class="v-font-size">
            <strong>{{ header }}</strong>
          </h1>
        </td>
      </tr>

      <tr>
        <td class="" align="center">
          {{ order_progress_bar }}
        </td>
      </tr>

      <tr>
        <td align="center">
            {{ confirmation_message }}
        </td>
      </tr>

      <tr>
        <td>
          <div align="center" style="margin-bottom: 40px;">
            {{ order_tracking_button }}
          </div>
        </td>
      </tr>

      <tr>
        <td>
          {% comment %} ////// LINE ITEMS //// {% endcomment %}
          {% for line in fulfillment.fulfillment_line_items %}
          
              {% capture line_image %}
                {% if line.line_item.image %}
                  <img src="{{ line.line_item | img_url: 'compact_cropped' }}" width="100" class="order-list__product-image"/>
                {% endif %}
              {% endcapture %}

              {% capture line_info_fitsaccs %}
                {% if line.line_item.product.title %}	
                  {% assign line_title = line.line_item.product.title %}	
                {% else %}	
                  {% assign line_title = line.line_item.title %}	
                {% endif %}
                {% if line.quantity < line.line_item.quantity %} 
                  {% capture line_display %} 
                    {{ line.quantity }} of {{ line.line_item.quantity }} 
                  {% endcapture %} 
                {% else %} 
                  {% assign line_display = line.line_item.quantity %} 
                {% endif %} 
                <strong><span class="order-list__item-title">
                  {{ line_title }} × {{ line_display }}
                </span></strong><br />
                {% comment %} <span>fitsAccs_key: fitsAccs_value</span> {% endcomment %}
                
                {% if lline.line_item.variant.title != 'Default Title' %}
                  <span class="order-list__item-variant">{{ lline.line_item.variant.title }}</span>
                {% endif %}
              {% endcapture %}

              {% capture line_info1_procsx %}
                {% if line.line_item.product.title %}
                  {% assign line_title = line.line_item.product.title %} 
                  {% else %} 
                  {% assign line_title = line.line_item.title %} 
                {% endif %}
                <strong>
                  <span class="order-list__item-title"> {{ line_title }}</span><br />
                </strong>
                {% if isPro or isMonitor %}
                  {% comment %} <span>info1_key: info1_value</span><br/> {% endcomment %}
                {% endif %}
                {% for prop in line.line_item.properties reversed %}
                  {% unless prop.last == blank %}
                    {% if prop.first contains '_' %}
                      {% assign prop_key = prop.first | split: '_' | last | capitalize %}
                    {% else %}
                      {% assign prop_key = prop.first %}
                    {% endif %}
                    {% if prop.last contains '-' %}
                      {% assign prop_value = prop.last | replace: '-', ' ' %}
                    {% else %}
                      {% assign prop_value = prop.last %}
                    {% endif %}
                    {% if prop.last contains '|' %}
                      {% assign prop_value = prop.last | split: '|' | first %}
                    {% else %}
                      {% assign prop_value = prop.last %}
                    {% endif %}
                  {% endunless %}

                  {% case prop_key %}
                    {% when "Model" %}
                      <span>{{prop_key}}: {{prop_value}}</span><br/>
                    {% when "Base Model" %}
                      <span>{{prop_key}}: {{prop_value}}</span><br/>
                    {% when "User" %}
                      <span>{{prop_key}}: {{prop_value}}</span><br/>
                    {% when "Plate L" %}
                      <span>Left Faceplate: {{prop_value}}</span><br/>
                    {% when "Plate R" %}
                      <span>Right Faceplate: {{prop_value}}</span><br/>
                  {% endcase %}

                {% endfor %}
              {% endcapture %}
              
              {% capture line_info2_procsx %}
                {% if isPro or isMonitor %}
                  {% comment %} <span>info2_key: info2_value</span><br/> {% endcomment %}
                {% endif %}
                {% for prop in line.line_item.properties reversed %}
                    {% unless prop.last == blank %}
                      {% if prop.first contains '_' %}
                        {% assign prop_key = prop.first | split: '_' | last | capitalize %}
                      {% else %}
                        {% assign prop_key = prop.first %}
                      {% endif %}
                      {% if prop.last contains '-' %}
                        {% assign prop_value = prop.last | replace: '-', ' ' %}
                      {% else %}
                        {% assign prop_value = prop.last %}
                      {% endif %}
                    {% endunless %}
                  
                  {% case prop_key %}
                    {% when "Logo" %}
                      <span>{{prop_key}}: {{prop_value}}</span><br/>
                    {% when "Cable" %}
                      <span>{{prop_key}}: {{prop_value}}</span><br/>
                    {% when "Case" %}
                      <span>Free {{prop_key}}: {{prop_value}}</span><br/>
                    {% when "Case Engraving" %}
                      {% assign items = prop_key | split: ' ' %}
                      {% capture multy_word_key %}
                        {% for item in items %}
                          {{ item | capitalize }}
                          {% endfor %}
                      {% endcapture %}
                    <span>{{multy_word_key}}: <br/> {{prop_value}}</span><br/>
                  {% endcase %}
                {% endfor %}
              {% endcapture %}

              {% capture line_price %}
                {% if line.original_line_price != line.line_price %}
                  <del class="order-list__item-original-price">{{ line.original_line_price | money }}</del><br/>
                {% endif %}
                  <strong><span class="order-list__item-price">{{ line.line_price | money }}</span></strong>
              {% endcapture %}
              {% comment %} ///// IsPro and isMonitor LINE ITEMS {% endcomment %}
              {% if isPro or isMonitor %}
                <table width="100%" style="border-bottom: 2px solid #FAF9F7; margin-bottom: 30px; font-size: 14px;"> 
                  <tr>
                    <td width="20%" valign="top">
                      {{ line_image }}
                    </td>
                    <td width="33%" valign="top">
                      {{ line_info1_procsx}}
                    </td>
                    <td width="40%" valign="top">
                      {{ line_info2_procsx }}
                    </td>
                  </tr>
                </table>
              {% endif %}
              {% comment %} ///// isFitKit and isFits LINE ITEMS {% endcomment %}
              {% if isFitKit or isFits %}
                <table width="100%" style="border-bottom: 2px solid #FAF9F7; margin-bottom: 30px; font-size: 14px;">
                  <tr>
                    <td width="50%" align="right" valign="top">
                      {{ line_image }}
                      
                    </td>
                    <td width="50%" align="left" valign="middle">
                      {{ line_info_fitsaccs }}
                    </td>
                  </tr>
                </table>
              {% endif %}
              {% comment %} ///// isAccsOnly LINE ITEMS {% endcomment %}
              {% if isAccsOnly %}
                <table width="100%" style="margin-bottom: 30px; font-size: 14px;">
                  <tr>
                    <td width="100%" align="center" valign="middle">
                      {{ line_image }}
                    </td>
                  </tr>
