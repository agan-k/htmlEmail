{% comment %}
//// ASSIGN PRODUCT ///// 
{% endcomment %}
{% assign isPro = false %}
{% assign isMonitor = false %}
{% assign isFitKit = false %}
{% assign isFits = false %}
{% assign isAccsOnly = true %}
{% for line in fulfillment.fulfillment_line_items %}
  {% if line.line_item.product.type == "pro" or line.line_item.product.type == "Pro-Hidden" %}
    {% assign isPro = true %}
    {% assign isMonitor = false %}
    {% assign isFits = false %}
    {% assign isAccsOnly = false %}
  {% elsif line.line_item.product.type == "Monitor" or line.line_item.product.type == "Monitor-Hidden" %}
   {% assign isMonitor = true %}
   {% assign isFitKit = false %}
    {% assign isFits = false %}
    {% assign isAccsOnly = false %}
  {% elsif line.line_item.product.type == "Fitkit" %}
   {% assign isFitKit = true %}
   {% assign isPro = false %}
   {% assign isMonitor = false %}
    {% assign isFits = false %}
    {% assign isAccsOnly = false %}
  {% elsif line.line_item.product.type == "UE Fits" %}
   {% assign isFits = true %}
    {% assign isAccsOnly = false %}
  {% elsif line.line_item.product.type == "Accessories" %}
   {% assign isAccsOnly = true %}
  {% endif %}
{% endfor %}
{% comment %} 
////// EMAIL TITLE /////
{% endcomment %}
{% capture email_title %}Thank you for your order!{% endcapture %}
{% comment %} 
////// test items //////
{% endcomment %}
{% comment %} {% capture test_items %}
  <span>test-></span>
  <div style="width: 90%; min-height: 300px; margin: 0 auto; border: 1px solid red; word-wrap: break-word; padding: .8rem;">

    {% for line in fulfillment.fulfillment_line_items %}
      {{ line.line_item | json }}
      {% if line.line_item.image %}
            <img src="{{ line.line_item | img_url: 'compact_cropped' }}" align="left" width="60" height="60" class="order-list__product-image"/>
      {% endif %}
      {% if line.line_item.product.type %}	
            {% assign line_type = line.line_item.product.type %}	
          {% else %}
          <span>{{line_type}}</span><br/>
      {% endif %}
    {% endfor %}
  </div>
{% endcapture %} {% endcomment %}
{% comment %}
////// HEADER ////////
{% endcomment %}
{%- capture header -%}
  {%- if isPro or isMonitor -%}
    Unparalleled Sound Is On The Way
  {%- elsif isFitKit -%}
    You’re One Step Closer to Your CSX Earphones
  {%- elsif isFits -%}
    Get Excited!
  {%- elsif isAccsOnly -%}
    Your Order is On Its Way
  {%- endif -%}
{%- endcapture -%}
{% comment %}
////// ORDER PROGRESS BAR ////////
{% endcomment %}
{%- capture order_progress_bar -%}
  <div style="margin-bottom: 25px;">
    {% if isPro %}
      <img align="center" border="0"
        src="{{ 'pro-shipped.png' | file_url }}"
        alt="" title="" width="500" />
    {% elsif isMonitor %}
      <img align="center" border="0"
        src="{{ 'csx-shipped.png' | file_url }}"
        alt="" title="" width="500" />
    {% elsif isFitKit %}
      <img align="center" border="0"
        src="{{ 'csx-fitkit-shipped.png' | file_url }}"
        alt="" title="" width="500" />
    {% elsif isFits %}
      <img align="center" border="0"
        src="{{ 'fits-shipped.png' | file_url }}"
        alt="" title="" width="500" />
    {% endif %}
  </div>
{%- endcapture -%}
{% comment %}
//// ORDER TRACKING /////
{% endcomment %}
{% if fulfillment.tracking_numbers.size > 0 %}
  {%- capture order_tracking_url -%}
    {%- if fulfillment.tracking_url -%}
      {{ fulfillment.tracking_url }}
    {%- endif -%}
  {%- endcapture -%}

  {% capture order_tracking_number %}
    {% if fulfillment.tracking_numbers.size == 1 %}
    {{ fulfillment.tracking_numbers.first | append: "."}}
    {% endif %}
  {% endcapture %}
{% endif %}
{% comment %}
////  ORDER TRACKING Button /////
{% endcomment %}
{% capture order_tracking_button %}
  <a id="btn" href="{{ order_tracking_url }}" style="margin-top: 20px;">
    <!--[if mso]>
    <i style="letter-spacing: 25px; mso-font-width: -100%; mso-text-raise: 30pt;">&nbsp;</i>
      <![endif]-->
    {% if isFitKit %}
      <span style="mso-text-raise: 15pt;"><strong>Track FitKit</strong></span>
    {% elsif isFits %}
      <span style="mso-text-raise: 15pt;"><strong>Track Order</strong></span>
    {% else %}
      <span style="mso-text-raise: 15pt;"><strong>Track Shipment</strong></span>
    {% endif %}
    <!--[if mso]>
      <i style="letter-spacing: 25px; mso-font-width: -100%;">&nbsp;</i>
    <![endif]-->
  </a>
{% endcapture %}
{% comment %}
//// CONFIRMATION MESSAGE /////
{% endcomment %}
{% capture confirmation_message %}
  <div style="padding: 0 30px;">
  {% if isPro or isMonitor %}
    <p>
      <strong>Hi {{ customer.first_name }},</strong><br/><br/>

      Your premium listening experience is on its way! Follow its journey at 
      <strong>{{order_tracking_number}}</strong> 
      Please note the package will require a signature upon delivery.
    </p>
  {% elsif isFitKit %}
      <p>
        <strong>Hi {{ customer.first_name }},</strong><br/><br/>
        Your FitKit for order <strong>#{{ order_number }}</strong> is officially on its way. You can follow 
        its progress via tracking number<strong>{{order_tracking_number}}</strong>
      </p>
  {% elsif isFits %}
    <p>
      Hey {{ customer.first_name }}, order <strong>#{{ order_number }}</strong> has shipped! Follow its journey 
      at <strong>{{order_tracking_number}}</strong> 
    </p>
  {% elsif isAccsOnly %}
    <p>
      Hi {{ customer.first_name }}, <br/>
    </p>
    <p>
      Your Ultimate Ears order <strong>#{{ order_number }}</strong> is on its way to you! Follow its journey 
      at <strong>{{order_tracking_number}}</strong>
    </p>
  {% endif %}
{% endcapture %}
{% comment %}
////  CONTACT US MESSAGE /////
{% endcomment %}
{% capture contact_us_message %}
  {% if isFits %}
