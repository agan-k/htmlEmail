      {% if line.line_item.image %}
            <img src="{{ line.line_item | img_url: 'compact_cropped' }}" align="left" width="60" height="60" class="order-list__product-image"/>
      {% endif %}
    {% endfor %}
  </div>

  <table class="u-row" cellpadding="0" cellspacing="0">
    <tbody>
      <tr>
        <td align="center">
          <a href="{{shop.url}}" target="_blank">
            {%- if shop.email_logo_url %}
              <img align="center" border="0" src="{{shop.email_logo_url}}" alt="" title="" width="116" />
            {%- else %}
            <h1 class="shop-name__text">
              <a href="{{shop.url}}">{{ shop.name }}</a>
            </h1>
            {%- endif %}
          </a>
        </td>
      </tr>

      <tr>
        <td {% unless isAccsOnly %} class="pt-30 px-30" {% endunless %} align="center">
          <h1 class="v-font-size">
            <strong>{{ header }}</strong>
          </h1>
        </td>
      </tr>

      <tr>
        <td class="" align="center">
          {{ order_progress_bar }}
        </td>
      </tr>

      <tr>
        <td align="center">
            {{ confirmation_message }}
        </td>
      </tr>

      <tr {% unless isFits %} style="display: none;" {% endunless %}>
        <td>
          <div align="center" style="margin-bottom: 40px;">
            {{ order_tracking }}
          </div>
        </td>
      </tr>

      {% comment %} <tr>
        <td>
          <table width="100%" style="border-bottom: 2px solid #FAF9F7; margin-bottom: 30px; font-size: 14px;">
            <tr>
              <td width="20%" valign="top">
                <h1>Cell1</h1>
                {% for line in line.items %}
                  {% capture line_image %}
                {% if line.properties and line.properties._image %}
                  <img src="{{ line.properties._image}}" align="left" class="order-list__product-image" />
                {% elsif line.image %}
                  <img src="{{ line | img_url: 'compact_cropped' }}" align="left" width="100" height="auto"
                    class="order-list__product-image" />
                {% endif %}
              {% endcapture %}
              {{line_image}}
                {% endfor %}
              </td>
              <td width="33%" valign="top">
                <h1>Cell2</h1>
              </td>
              <td width="40%" valign="top">
                <h1>Cell3</h1>
              </td
            </tr>
            <tr>
              <td width="20%"></td>
              <td width="40%"></td>
              <td width="40%" align="right">
                <h1>Cell4</h1>
              </td>
            </tr>
          </table>
        </td>
      </tr> {% endcomment %}

      <tr>
        <td>
          {% comment %} ////// LINE ITEMS //// {% endcomment %}
            {% for line in fulfillment.fulfillment_line_items %}
              {% capture line_image %}
                {% if line.line_item.image %}
                  <img src="{{ line.line_item | img_url: 'compact_cropped' }}" align="left" width="100" class="order-list__product-image"/>
                {% endif %}
              {% endcapture %}

              {% capture line_info_fitsaccs %}
                {% if line.line_item.product.title %}	
                  {% assign line_title = line.line_item.product.title %}	
                {% else %}	
                  {% assign line_title = line.line_item.title %}	
                {% endif %}
                {% if line.quantity < line.line_item.quantity %} 
                  {% capture line_display %} 
                    {{ line.quantity }} of {{ line.line_item.quantity }} 
                  {% endcapture %} 
                {% else %} 
                  {% assign line_display = line.line_item.quantity %} 
                {% endif %} 
                <strong><span class="order-list__item-title">
                  {{ line_title }} × {{ line_display }}
                </span></strong><br />
                {% comment %} <span>fitsAccs_key: fitsAccs_value</span> {% endcomment %}
                
                {% if line.variant.title != 'Default Title' %}
                  <span class="order-list__item-variant">{{ line.variant.title }}</span>
                {% endif %}
              {% endcapture %}

              {% capture line_info1_procsx %}
                {% if line.product.title %}
                  {% assign line_title = line.product.title %} 
                  {% else %} 
                  {% assign line_title = line.title %} 
                {% endif %}
                <strong>
                  <span class="order-list__item-title"> {{ line_title }}</span><br />
                </strong>
                  {% comment %} <span>info1_key: info1_value</span><br/> {% endcomment %}
                {% for prop in line.properties reversed %}
                  {% comment %} <span style="color: red;">{{prop.first}}: {{prop.last}} <br/> </span> {% endcomment %}
                  {% unless prop.last == blank %}
                    {% if prop.first contains '_' %}
                      {% assign prop_key = prop.first | split: '_' | last | capitalize %}
                    {% else %}
                      {% assign prop_key = prop.first %}
                    {% endif %}
                    {% if prop.last contains '-' %}
                      {% assign prop_value = prop.last | replace: '-', ' ' %}
                    {% else %}
                      {% assign prop_value = prop.last %}
                    {% endif %}
                    {% if prop.last contains '|' %}
                      {% assign prop_value = prop.last | split: '|' | first %}
                    {% else %}
                      {% assign prop_value = prop.last %}
                    {% endif %}
                  {% endunless %}

                  {% case prop_key %}
                    {% when "Model" %}
                      <span>{{prop_key}}: {{prop_value}}</span><br/>
                    {% when "Base Model" %}
                      <span>{{prop_key}}: {{prop_value}}</span><br/>
                    {% when "User" %}
                      <span>{{prop_key}}: {{prop_value}}</span><br/>
                    {% when "Plate L" %}
                      <span>Left Faceplate: {{prop_value}}</span><br/>
                    {% when "Plate R" %}
                      <span>Right Faceplate: {{prop_value}}</span><br/>
                  {% endcase %}

                {% endfor %}
              {% endcapture %}
              
              {% capture line_info2_procsx %}
                {% comment %} <span>info2_key: info2_value</span><br/> {% endcomment %}
                {% for prop in line.properties reversed %}
                    {% comment %} <span style="color: red;">{{prop.first}}: {{prop.last}} <br/> </span> {% endcomment %}
                    {% unless prop.last == blank %}
                      {% if prop.first contains '_' %}
                        {% assign prop_key = prop.first | split: '_' | last | capitalize %}
                      {% else %}
                        {% assign prop_key = prop.first %}
                      {% endif %}
                      {% if prop.last contains '-' %}
                        {% assign prop_value = prop.last | replace: '-', ' ' %}
                      {% else %}
                        {% assign prop_value = prop.last %}
                      {% endif %}
                    {% endunless %}
                  
                  {% case prop_key %}
                    {% when "Logo" %}
                      <span>{{prop_key}}: {{prop_value}}</span><br/>
                    {% when "Cable" %}
                      <span>{{prop_key}}: {{prop_value}}</span><br/>
                    {% when "Case" %}
                      <span>Free {{prop_key}}: {{prop_value}}</span><br/>
                    {% when "Case Engraving" %}
                      {% assign items = prop_key | split: ' ' %}
                      {% capture multy_word_key %}
                        {% for item in items %}
                          {{ item | capitalize }}
                          {% endfor %}
                      {% endcapture %}
                    <span>{{multy_word_key}}: <br/> {{prop_value}}</span><br/>
                  {% endcase %}
                {% endfor %}
              {% endcapture %}

              {% capture line_price %}
                {% if line.original_line_price != line.line_price %}
                  <del class="order-list__item-original-price">{{ line.original_line_price | money }}</del><br/>
                {% endif %}
                  <strong><span class="order-list__item-price">{{ line.line_price | money }}</span></strong>
              {% endcapture %}
              {% comment %} ///// isFits LINE ITEMS {% endcomment %}
              <table width="100%" {% if isFits %} style="border-bottom: 2px solid #FAF9F7; margin-bottom: 30px; font-size: 14px;" {% else %} style="display: none; border-bottom: 2px solid #FAF9F7; margin-bottom: 30px; font-size: 14px;" {% endif %}>
                <tr>
                  <td width="35%" valign="top">
                    
                  </td>
                  <td width="65%" valign="middle">
                    {{ line_image }}
                    {{ line_info_fitsaccs }}
                  </td>
                </tr>
              </table>
              {% comment %} ///// isFitKit LINE ITEMS {% endcomment %}
              <table width="100%" {% if isFitKit %} style="border-bottom: 2px solid #FAF9F7; margin-bottom: 30px; font-size: 14px;" {% else %} style="display: none; border-bottom: 2px solid #FAF9F7; margin-bottom: 30px; font-size: 14px;" {% endif %}>
                <tr>
                  <td width="20%" valign="top">
                    {{ line_image }}
                    
                  </td>
                  <td width="33%" valign="middle">
                    {{ line_info_fitsaccs }}
                  </td>
                  <td width="40%" valign="top">
                    {{ line_info2_procsx }}
                  </td
                </tr>
                <tr>
                  <td width="20%"></td>
                  <td width="40%"></td>
                  <td width="40%" align="right">
                    {{ line_price }}
                  </td>
                </tr>
              </table>
            {% endfor %}  
          {% comment %} ////// Line Items END //// {% endcomment %}
        </td>
      </tr>
      
      {% comment %} <tr>
        <td>
          <table role="presentation" cellpadding="0" cellspacing="0" width="100%" border="0" style="font-size: 14px;">
            <tbody>
              <tr>
                {% if discount != blank %}
                  <td width="60%"></td>
